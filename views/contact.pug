            input(type="email", class='myinput', name='email', required , placeholder='Enter Your Email') 
            input(type="text", class='myinput', name='address', required , placeholder='Enter Your Address') 
            input(type="text", class='myinput', name='desc', required , placeholder='Enter Your desc') 
            div.press
                button(class='btn')
