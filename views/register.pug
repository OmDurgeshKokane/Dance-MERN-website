extends base1.pug

block scripts
    script(src="https://apps.elfsight.com/p/platform.js" defer='')
block style 
    style
      include ../static/style.css
      include ../static/register.css
block content
    div.contanier
        div.elfsight-app-c3e10023-c853-4004-a37a-b1c10bdd4aef 
        h1 Register
        //- div.img
        //-     img(src="../static/img/regianimation.gif", alt="", srcset="")
        form(action="/register" method='post' class='myform')
            label(for="fname") First Name
            input(type="text" , class='myinput' , name='firstname' ,id = "fname", pattern="[a-zA-Z'-'\\s]*" required, placeholder='First Name')
            label(for="lname") Last Name
            input(type="text" , class='myinput' , name='lastname' ,id = "lname",pattern="[a-zA-Z'-'\\s]*" required,  placeholder='Last Name')
            label(for="mail") Email
            input(type="email" , class='myinput' , name='email' ,id = "mail",required,  placeholder='Enter Email')
            label(for="gen") Male 
            input(type="radio" , class='myinput' , name='gender',value = "Male", id = "gen" ,required)
            label(for="fen") Female
            input(type="radio" , class='myinput' , name='gender',value = "Female", id = "fen" ,required)
            label(for="pho") Phone
            input(type="phone" , class='myinput' , name='phone' ,id = "pho", pattern='[7-9]\\d{9}$' maxlength='10' oninvalid="this.setCustomValidity('Please Enter Valid Number')" oninput="setCustomValidity('')" required,  placeholder='Enter Phone')
            label(for="age") Age
            input(type="text" , class='myinput',  name='Age',id = "age",required,  placeholder='Enter Age')
            label(for="pass") Password
            input(type="password" , class='myinput',  name='password',id = "pass", required, placeholder='Enter Password')
            label(for="pass1") Confirm Password
            input(type="password" , class='myinput' , name='confirmpassword',id = "pass1", required, placeholder='Confirm Password')
            div.press
                button(class='btn')
                    |Register 
        div.link
            li #[a(href ='/log') Go To Login]
            
        
